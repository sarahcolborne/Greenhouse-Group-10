        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.320"/>

    <TextView
        android:id="@+id/CurrGreenhouseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Greenhouse Conditions"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050"/>

    <TextView
        android:id="@+id/CurrLightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Level"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="289dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.480"/>

    <TextView
        android:id="@+id/valueCurrHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="humidity value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.354"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/valueCurrLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
